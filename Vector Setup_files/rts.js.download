document.addEventListener('DOMContentLoaded', () => {
    const containers = document.querySelectorAll('.vec-container');
    let currentIndex = 0;

    function showNextContainer() {
        if (currentIndex < containers.length) {
            containers[currentIndex].style.display = 'block'; // Show the current container
            currentIndex++;
            setTimeout(showNextContainer, 2000); // Show the next container after 2 seconds
        }
    }

    showNextContainer(); // Start the process
});
