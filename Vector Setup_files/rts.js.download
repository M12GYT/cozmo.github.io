document.addEventListener("DOMContentLoaded", function() {
  const confirmButton = document.querySelector(".vec-env-select-btn");
  const containerEnvironment = document.getElementById("containerEnvironment");
  const containerDiscover = document.getElementById("containerDiscover");

  // Add event listener to the Confirm button
  confirmButton.addEventListener("click", function() {
    // Hide the current environment selection
    containerEnvironment.style.display = "none";

    // Show the next step instructions (connecting the bot)
    containerDiscover.style.display = "block";
  });
});
