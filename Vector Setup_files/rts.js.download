document.addEventListener('DOMContentLoaded', function() {
    const containers = document.querySelectorAll('.vec-container');
    let currentIndex = -1; // Start with -1 so that the first call to showNextContainer sets the correct index

    function showNextContainer() {
        // Hide current container if any
        if (currentIndex !== -1) {
            containers[currentIndex].style.display = 'none';
        }

        // Move to next container
        currentIndex = (currentIndex + 1) % containers.length;

        // Show next container
        containers[currentIndex].style.display = 'block';
    }

    // Find and display the container with instructions first
    for (let i = 0; i < containers.length; i++) {
        if (containers[i].id === 'containerEnvironment') {
            currentIndex = i;
            break;
        }
    }

    containers[currentIndex].style.display = 'block'; // Display the instruction container
    setInterval(showNextContainer, 3000);
});
