document.addEventListener('DOMContentLoaded', function() {
    const containers = document.querySelectorAll('.vec-container');
    let currentIndex = -1;

    function showNextContainer() {
        if (currentIndex !== -1) {
            containers[currentIndex].style.display = 'none';
        }

        currentIndex = (currentIndex + 1) % containers.length;

        containers[currentIndex].style.display = 'block';
    }

    // Find the container with instructions and set it as the first visible container
    let instructionContainerFound = false;
    for (let i = 0; i < containers.length; i++) {
        if (containers[i].id === 'containerEnvironment') {
            currentIndex = i;
            instructionContainerFound = true;
            break;
        }
    }

    if (instructionContainerFound) {
        containers[currentIndex].style.display = 'block'; // Show the instruction container
        setInterval(showNextContainer, 3000);
    } else {
        console.error('Container with id "containerEnvironment" not found.');
    }
});
